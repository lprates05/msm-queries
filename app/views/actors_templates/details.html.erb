<h1>Movie #<%= @the_actor.id %> details</h1>

<a href = "/actors">Go back</a>

<hr>
<dl>
  <dt>Name</dt>
  <dd><%= @the_actor.name %></dd>

    <dt>Dob</dt>
  <dd><%= @the_actor.dob %></dd>

    <dt>Bio</dt>
  <dd><%= @the_actor.bio %></dd>

    <dt>Image</dt>
  <dd><img src="<%= @the_actor.image %>" width="200"></dd>

   <dt>Created at</dt>
  <dd><%= @the_actor.created_at %></dd>

   <dt>Updated at</dt>
  <dd><%= @the_actor.updated_at %></dd>
</dl>

<% matching_movies = Movie.where({:actor_id => @the_actor.id}) %>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character name</th>
    <th></th>
  </tr>

<h2>Filmography</h2>
<% matching_movies.each do |a_movie| %>
  <tr>
    <td><%= a_movie.title %></td>
    <td><%= a_movie.year %></td>
    <td><%= @the_director.name %></td>
    <td>
      <a href="/movies/<%= a_movie.id %>">Show details</a>
    </td>
    <td><%= @the_director.name %></td>
    <td>
      <a href="/movies/<%= a_movie.id %>">Show details</a>
    </td>
  </tr>
<% end %>

</hr>
